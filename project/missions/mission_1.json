      "stage_id": 3,
      "type": "pattern_completion",
      "npc": "Baker Ben",
      "npc_text": "Now tell me what Tom wants. Write the sentence:",
      "goal": "Write sentence about Tom",
      "input_type": "text_free",
      "expected_response": "Tom wants milk.",
      "allowed_patterns": ["Tom wants milk\\.?", "Tom want milk\\.?"],
      "examples": ["Tom wants milk.", "He wants milk."],
      "validation_rules": {
