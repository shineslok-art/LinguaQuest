  "stages": [
    {
      "stage_id": 1,
      "type": "dialogue_introduction",
      "npc": "Ben",
      "npc_text": "Hello! Welcome to Wordville. I am Ben. What is your name?",
      "goal": "Introduce yourself",
      "input_type": "text_free",
